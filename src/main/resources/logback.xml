<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender configuration -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Log output pattern -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root log level to DEBUG and use the CONSOLE appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Set the logger level for your package -->
    <logger name="com.gymcrm" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

</configuration>